<div class="User-control"  style="margin-left:2%;">
	<fieldset style="width:90%; background: #f7faff;">
  	<legend style="background: #1e2078;">修改单词</legend>
  	<% lexeme = CnLexeme.find(params[:id]) %>
    <% form_remote_tag  :url => {:action => :edit},	:update=>"preview" do %>
			<%= hidden_field_tag :id, lexeme.id %>
      <%= render :partial => 'modification_form', :object=>lexeme %>
			<div style="padding-top:10px;padding-left:15px;padding-bottom:10px;">
				<%= submit_tag "预览" %>
			</div>
    <% end %>
  </fieldset>
	<p>
	<div id="preview"></div>
</div>